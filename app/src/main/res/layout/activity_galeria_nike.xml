<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".galeriaNike.galeriaNike">

    <ScrollView

        android:id="@+id/scrollView2"
        android:layout_width="409dp"
        android:layout_height="728dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#E32020"
                android:text="@string/modelos"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.581" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:popupBackground="@color/white"
                android:scrollbarStyle="outsideOverlay"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="43dp" />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                app:srcCompat="@drawable/nike" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#E32020"
                android:text="NIKE Air Force 1 triple white"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="274dp"
                android:layout_height="172dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/todo1"
                app:srcCompat="@drawable/trew" />

            <Button
                android:id="@+id/Btn1"
                android:layout_width="245dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#E32020"
                android:text="VER"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E32020"
                android:text="Nike SB Dunk low Panda"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="255dp"
                android:layout_height="182dp"
                android:layout_gravity="center"
                android:contentDescription="@string/todo2"
                app:srcCompat="@drawable/pnd" />

            <Button
                android:id="@+id/Btn2"
                android:layout_width="246dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#E32020"
                android:text="VER"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E32020"
                android:text="Nike VAPORMAX"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="400dp"
                android:layout_height="188dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/vpr" />

            <Button
                android:id="@+id/Btn3"
                android:layout_width="246dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#E32020"
                android:text="VER"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E32020"
                android:text="Nike Air Max 97"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="287dp"
                android:layout_height="194dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ns" />

            <Button
                android:id="@+id/Btn4"
                android:layout_width="246dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#E32020"
                android:text="VER"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E32020"
                android:text="Nike Air Force 1 Green x OFF-WHITE"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="269dp"
                android:layout_height="161dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/off" />

            <Button
                android:id="@+id/Btn5"
                android:layout_width="246dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#E32020"
                android:text="VER"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>