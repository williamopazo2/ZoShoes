<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modelos.perfiljordan4jbalvin">


  <ImageView
      android:id="@+id/imageView7"
      android:layout_width="303dp"
      android:layout_height="171dp"
      android:background="@color/black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.146"
      app:srcCompat="@drawable/jbalvin" />

  <TextView
      android:id="@+id/textView10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="Jordan 1 Retro High J Balvin "
      android:textColor="@color/black"
      android:textStyle="bold"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.355" />

  <TextView
      android:id="@+id/textView15"
      android:layout_width="363dp"
      android:layout_height="127dp"
      android:background="#E32020"
      android:gravity="center"
      android:text=""
      android:textColor="@color/white"
      android:textSize="17dp"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/buttoncompra"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="#E32020"
      android:text="Link de Compra"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.939" />

  <ImageView
      android:id="@+id/imageView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.023"
      app:srcCompat="@drawable/jordanlogo" />

  <TableLayout
      android:id="@+id/tableLayout"
      android:layout_width="378dp"
      android:layout_height="156dp"
      android:background="#E32020"
      android:gravity="center"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.571"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.811">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/estilo"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:layout_weight="1"
          android:text="  Estilo"
          android:textColor="@color/white" />

      <TextView
          android:id="@+id/estilo2"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="CT8527-400"
          android:textColor="@color/white" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/color"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="  Color"
          android:textColor="@color/white" />

      <TextView
          android:id="@+id/colo2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:layout_weight="1"
          android:text="UNIVERSITY BLUE/TECH GREY-WHITE-BLACK"
          android:textColor="@color/white" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/precio"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginBottom="10dp"
          android:layout_weight="1"
          android:text="  Precio de lanzamiento"
          android:textColor="@color/white" />

      <TextView
          android:id="@+id/precio2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:layout_weight="1"
          android:text="200 US$ / 185.000 CLP"
          android:textColor="@color/white" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/fecha"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginBottom="10dp"
          android:layout_weight="1"
          android:text="  Fecha de lanzamiento"
          android:textColor="@color/white" />

      <TextView
          android:id="@+id/fecha2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:layout_weight="1"
          android:text="28/04/2021"
          android:textColor="@color/white" />
    </TableRow>

  </TableLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>